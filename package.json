{
  "homepage": "https://www.adamalston.com/",
  "name": "v2",
  "version": "3.0.0",
  "private": true,
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-tsparticles": "^1.43.1",
    "styled-components": "^5.3.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0",
    "format": "prettier --config ./.prettierrc --write \"./src/**/*.{js,jsx,ts,tsx,css,scss,json}\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.45",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@types/styled-components": "^5.1.25",
    "husky": "^7.0.4",
    "jest-canvas-mock": "^2.4.0",
    "prettier": "^2.7.1",
    "react-scripts": "^5.0.1",
    "sass": "^1.53.0",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/index.{js,jsx,ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/types/"
    ]
  }
}
